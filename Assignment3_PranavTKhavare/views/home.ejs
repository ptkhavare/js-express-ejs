<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"
      integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Bilbo+Swash+Caps"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Kalam"
      rel="stylesheet"
    />
    <link rel="stylesheet" type="text/css" href="css/home.css" />
    <title>SkyHigh Software Store</title>
  </head>
  <body>
    <header>
      <h1>
        SkyHigh Softwares
        <small class="text-muted">Pioneers in creative softwares!</small>
      </h1>
    </header>
    <div class="container">
      <div class="row">
        <div class="col-sm">SkyHigh Photoshop Pro</div>
        <div class="col-sm">SkyHigh Lightroom Pro</div>
        <div class="col-sm">SkyHigh Wallpapers</div>
      </div>
    </div>
    <section class="orderForm">
      <form name="orderForm" method="POST" action="/">
        <label>Name</label>
        <input
          id="name"
          placeholder="FristName LastName"
          type="text"
          name="name"
        /><br />

        <label>Email</label>
        <input
          id="email"
          placeholder="test@test.com"
          type="text"
          name="email"
        /><br />

        <label>Phone</label>
        <input
          id="phone"
          placeholder="5198201234"
          type="phone"
          name="phone"
        /><br />

        <label>Address</label>
        <input id="address" placeholder="" type="text" name="address" /><br />

        <label>City</label>
        <input id="city" placeholder="Toronto" type="text" name="city" /><br />

        <label>Province</label>
        <select name="province" id="province">
          <option value="">Select</option>
          <option value="AB">AB</option>
          <option value="BC">BC</option>
          <option value="MB">MB</option>
          <option value="NB">NB</option>
          <option value="NL">NL</option>
          <option value="NT">NT</option>
          <option value="NS">NS</option>
          <option value="NU">NU</option>
          <option value="ON">ON</option>
          <option value="PE">PE</option>
          <option value="QC">QC</option>
          <option value="SK">SK</option>
          <option value="YT">YT</option>
        </select>
        <br />

        <label>Photoshop Pro Quantity</label>
        <input
          id="photoshop"
          placeholder=""
          type="number"
          name="photoshop"
          min="0"
        /><br />

        <label>Lightroom Pro Quantity</label>
        <input
          id="lightroom"
          placeholder=""
          type="number"
          name="lightroom"
          min="0"
        /><br />

        <label>Wallpapers Quantity</label>
        <input
          id="wallpapers"
          placeholder=""
          type="number"
          name="wallpapers"
          min="0"
        />
        <br />
        <br />
        <input type="submit" value="Submit" />
        <br />
      </form>
    </section>

    <section class="orderForm">
      <div class="formData">
        <% if (typeof(uiErrors) != 'undefined') { for (let error of uiErrors) {
        %>
        <p class="errors"><%= error.msg %></p>
        <% } } %>


         <% if(typeof(error) != 'undefined') 
         { 
           %>
        <p class="errors"><%= error %></p>
        <% 
         } 
        %> 

      <% if(typeof(total) != 'undefined') { %>
        <p id="formResult">Your Receipt:</p>
        <table>
          <tr>
            <th>Name:</th>
            <td><%= name %></td>
          </tr>
          <tr>
            <th>Email:</th>
            <td><%= email %></td>
          </tr>
          <tr>
            <th>Phone:</th>
            <td><%= phone %></td>
          </tr>
          <tr>
            <th>Address:</th>
            <td><%= address %></td>
          </tr>
          <tr>
            <th>City:</th>
            <td><%= city %></td>
          </tr>
          <tr>
            <th>Province:</th>
            <td><%= province %></td>
          </tr>
          <tr>
            <th>Photoshop Quantity:</th>
            <td><%= photoshopQuantity %></td>
          </tr>
          <tr>
            <th>Lightroom Quantity:</th>
            <td><%= lightroomQuantity %></td>
          </tr>
          <tr>
            <th>Wallpapers Quantity:</th>
            <td><%= wallpapersQuantity %></td>
          </tr>
          <tr>
            <th>Photoshop Rate:</th>
            <td><%= photoshopRate.toFixed(2) %></td>
          </tr>
          <tr>
            <th>Lightroom Rate:</th>
            <td><%= lightroomRate.toFixed(2) %></td>
          </tr>
          <tr>
            <th>Wallpapers Rate:</th>
            <td><%= wallpapersRate.toFixed(2) %></td>
          </tr>
          <tr>
            <th>Sub Total:</th>
            <td>$<%= subTotal.toFixed(2) %></td>
          </tr>
          <tr>
            <th>Tax:</th>
            <td>$<%= tax.toFixed(2) %></td>
          </tr>
          <tr>
            <th>Total:</th>
            <td>$<%= total.toFixed(2) %></td>
          </tr>
        </table>
        <% } %>
      </div>
    </section>
  </body>
</html>
